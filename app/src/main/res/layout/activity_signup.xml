                </LinearLayout>

                <TextView
                    android:id="@+id/titre_tache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/petitformalscript"
