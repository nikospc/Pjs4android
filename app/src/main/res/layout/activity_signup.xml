                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal">



                    <EditText
                        android:id="@+id/txtnomD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotolight"
                        android:hint="@string/hint_nom"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/grisClair" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prenomD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/nomD">


                    <EditText
                        android:id="@+id/txtprenomD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotolight"
                        android:hint="@string/hint_prenom"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/grisClair" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CodeEtu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/prenomD">



                    <EditText
                        android:id="@+id/txtCodeEtu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotolight"
                        android:hint="Code Etudiant"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/grisClair" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Pseudo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/CodeEtu">



                    <EditText
                        android:id="@+id/txtPseudo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotolight"
                        android:hint="Pseudo"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/grisClair" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GroupeTD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/Pseudo">


                    <EditText
                        android:id="@+id/txtgroupetd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotolight"
                        android:hint="Groupe TD"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/grisClair" />
                </LinearLayout>

