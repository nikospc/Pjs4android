<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="grppjs4.sug.parametre">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linecompte"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/robotobold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="Paramètres" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/actu"
        app:layout_constraintTop_toBottomOf="@+id/linecompte">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_refreshcoul"/>

        <TextView
            android:id="@+id/textactualiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Actualiser" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:id="@+id/decoid"
        app:layout_constraintTop_toBottomOf="@+id/actu"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_exit"/>
        <TextView
            android:id="@+id/textdeco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:clickable="true"

            android:text="@string/deconexion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"

        android:orientation="horizontal"
        android:id="@+id/traitsep"
        app:layout_constraintTop_toBottomOf="@+id/decoid">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Moncompte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@+id/traitsep">

        <TextView
            android:id="@+id/textmonc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotobold"
            android:text="Mon Compte"
            android:clickable="true"

            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:id="@+id/changepassword"
        app:layout_constraintTop_toBottomOf="@+id/Moncompte"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_change"/>
        <TextView
            android:id="@+id/textforgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:clickable="true"

            android:text="Changer mot de passe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:id="@+id/forgetpassword"
        app:layout_constraintTop_toBottomOf="@+id/changepassword"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_mdp"/>
        <TextView
            android:id="@+id/textchangepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:clickable="true"

            android:text="Oublie mot de passe?" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/traitsep2"
        app:layout_constraintTop_toBottomOf="@+id/forgetpassword">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@+id/traitsep2">


        <TextView
            android:id="@+id/textinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotobold"
            android:text="Infos"
            android:clickable="true"

            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:id="@+id/shareapp"
        app:layout_constraintTop_toBottomOf="@+id/infos"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_share"/>

        <TextView
            android:id="@+id/textshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:clickable="true"

            android:text="Partager l'app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:id="@+id/conduti"
        app:layout_constraintTop_toBottomOf="@+id/shareapp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_inf"/>
        <TextView
            android:id="@+id/textecondi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:clickable="true"

            android:text="Conditions d'utilisation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:id="@+id/prob"
        app:layout_constraintTop_toBottomOf="@+id/conduti"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_error"/>
        <TextView
            android:id="@+id/textprob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/robotolight"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:clickable="true"

            android:text="Signaler un problème" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
