<resources>

    <!-- Base application theme. -->
    <style name="AppBlankTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grisclair</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppBlankTheme">
        <!-- Customize your theme here. -->
        <!-- Base application thÃ¨me. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
    <!-- The Theme for the Actvity that have actionMode -->
    <style name="ActionModeAppTheme" parent="AppTheme">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/grisclair</item>
    </style>

    <style name="ActionModeAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionModeAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
